<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.ViewQuestionPost">

    <androidx.cardview.widget.CardView
        android:id="@+id/cat_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cat_post_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text=" Post Title"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/cat_post_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cat_post_type"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/qt"
                android:gravity="center"
                android:text="Letter"
                android:textAllCaps="true"
                android:textColor="#F8F7F7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cat_post_title" />

            <TextView
                android:id="@+id/cat_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Time Posted"
                app:layout_constraintEnd_toEndOf="@+id/cat_post_type"
                app:layout_constraintTop_toBottomOf="@+id/cat_post_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cat_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cat_post_title"
                app:layout_constraintTop_toBottomOf="@+id/cat_post_time">

                <TextView
                    android:id="@+id/cat_tag1"
                    style="@style/tag_item_style"
                    android:text="Tag"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cat_tag2"
                    style="@style/tag_item_style"
                    android:layout_marginLeft="5dp"
                    android:text="Tag"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cat_tag1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cat_tag3"
                    style="@style/tag_item_style"
                    android:layout_marginLeft="5dp"
                    android:text="Tag"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cat_tag2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cat_tag4"
                    style="@style/tag_item_style"
                    android:layout_marginLeft="5dp"
                    android:text="Tag"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cat_tag3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cat_tag5"
                    style="@style/tag_item_style"
                    android:layout_marginLeft="5dp"
                    android:text="Tag"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cat_tag4"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
